@model List<ClienteObligatorioP3.Models.DTOEnvio>
@{
    ViewData["Title"] = "Buscar Envíos por Comentario";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <div class="card border-0 shadow-lg rounded-4 p-5 bg-white">
                    <div class="mb-4">
                        <div style="font-size: 2.5rem;">🔍💬</div>
                        <h2 class="fw-bold text-primary mt-3">Buscar Envíos por Comentarios</h2>
                        <p class="fs-5 text-muted">Encontrá tus envíos buscando por una palabra clave en los comentarios.</p>
                    </div>

                    <form asp-action="BuscarPorComentario" method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="palabra" class="form-control form-control-lg" placeholder="Ingresá una palabra clave..." required />
                            <button type="submit" class="btn btn-primary btn-lg">Buscar</button>
                        </div>
                    </form>

                    @if (ViewBag.Error != null )
                    {
                        <div class="alert alert-light">@ViewBag.Error</div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-hover align-middle mt-4">
                            <thead class="table-light">
                                <tr>
                                    <th>Tracking</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>Fecha Finalización</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var envio in Model)
                                {
                                    <tr>
                                        <td>@envio.NumTracking</td>
                                        <td>@envio.tipoEnvio</td>
                                        <td>@envio.Estado</td>
                                        <td>@(envio.FechaFinalizacion?.ToString("dd/MM/yyyy") ?? "En curso")</td>
                                        <td>
                                            <a asp-action="DetalleSeguimiento" asp-route-numtracking="@envio.NumTracking" class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                                Ver Seguimiento
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else if (Model != null)
                    {
                        <div class="alert alert-info mt-4">No se encontraron envíos con esa palabra.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
