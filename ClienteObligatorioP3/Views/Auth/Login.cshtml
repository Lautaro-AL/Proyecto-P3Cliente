

@model ClienteObligatorioP3.Models.DTOLogin

@{
    ViewData["Title"] = "Ingreso al sistema";
}

<div class="container mt-6">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary mt-2">Login</h3>
                        <p class="text-muted">Accedé a tu cuenta para gestionar envíos</p>
                    </div>

                    <form asp-action="Login" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger visually-hidden" role="alert" id="validationSummary"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">Correo electrónico</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                <input asp-for="Email" class="form-control"  aria-describedby="emailHelp"  />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <div class="input-group has-validation">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="Password" type="password" class="form-control"  />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg d-flex justify-content-center align-items-center gap-2">
                                <i class="bi bi-box-arrow-in-right"></i> Ingresar
                            </button>
                        </div>
                    </form>
                    @if (ViewBag.Error is not null && !ViewBag.Error.Contains("errors"))
                    {
                        <div class="mt-4 text-danger small">
                            @ViewBag.Error
                        </div>
                    }

