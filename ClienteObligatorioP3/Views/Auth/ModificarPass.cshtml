@model ClienteObligatorioP3.Models.DTOModificarPassword

@{
    ViewData["Title"] = "Cambiar contraseña";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-6">
                <div class="card border-0 shadow-lg rounded-4 p-5 bg-white">

                    <div class="mb-4">
                        <div style="font-size: 3rem;">🔒</div>
                        <h2 class="fw-bold text-primary mt-3">Cambiar Contraseña</h2>
                        <p class="fs-5 text-muted">Actualizá tu contraseña para mantener tu cuenta segura</p>
                    </div>

                    @if (ViewBag.Error != null )
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }
                    else if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Mensaje
                        </div>
                    }

                    <form asp-action="ModificarPass" method="post" class="text-start">
                        <div class="mb-4">
                            <label asp-for="PasswordOriginal" class="form-label">Contraseña Actual</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                <input asp-for="PasswordOriginal" type="password" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PasswordNueva" class="form-label">Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock-fill"></i></span>
                                <input asp-for="PasswordNueva" type="password" class="form-control"  />
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg d-flex justify-content-center align-items-center gap-2">
                                <i class="bi bi-arrow-repeat"></i> Actualizar Contraseña
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
