@{
    string token = Context.Session.GetString("Token");
}

 @{
    ViewData["Title"] = "Inicio";
}

<div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="card border-0 shadow-lg rounded-4 p-5 bg-white">

                    <div class="mb-4">
                        <div style="font-size: 4rem;">🚚📦</div>
                        <h1 class="fw-bold text-primary mt-3">Obligatorio:  <span class="text-dark">Empresa de Envíos</span></h1>
                        <p class="fs-5 text-muted mt-2">
                            Plataforma de gestión de envíos exclusiva para clientes.
                        </p>
                    </div>

                    <div class="d-grid gap-3 d-sm-flex justify-content-center mt-4">
                        @if (token is null){
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg px-5 shadow-sm">
                            Iniciar Sesión
                        </a>
                        }
                        <a asp-controller="Envio" asp-action="RastrearEnvio" class="btn btn-outline-primary btn-lg px-5 shadow-sm">
                            📍 Rastrear Envíos
                        </a>
                    </div>

                    <div class="mt-5 text-muted small">
                        ¿No tenés cuenta? Contactanos para obtener acceso al sistema de gestión de envíos.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


